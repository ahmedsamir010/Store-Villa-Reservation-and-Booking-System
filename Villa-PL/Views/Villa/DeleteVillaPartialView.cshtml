@model Villa

<div class="modal fade" id="DeleteVillaModal-@Model.Id" tabindex="-1" aria-labelledby="DeleteModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Delete Villa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <!-- Display the image from the model or a placeholder if the image is not available -->
                        <img src="@Url.Content(Model.ImageUrl ?? "https://placekitten.com/600/400")" alt="@Model.Name" class="img-fluid rounded">
                    </div>
                    <div class="col-md-8">
                        <p>Are you sure you want to delete the villa: <strong>@Model.Name</strong>?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <form asp-controller="Villa" asp-action="Delete" method="post" class="d-md-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
