@model ResetPasswordVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: linear-gradient(to right, #f0f0f0, #e0e0e0);
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        button {
            margin-top: 15px;
            border-radius: 8px;
            font-weight: bold;
        }

        .btn-primary {
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #48a663, #3f955b);
                color: #fff;
            }

        .input-group-text {
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Reset Password</h2>

                <form asp-action="ResetPassword" class="needs-validation" novalidate>

                    <!-- Hidden fields for Email and Token -->
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <!-- Input fields for Password and ConfirmPassword -->
                    <div class="form-group">
                        <label for="Password">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" class="form-control" type="password" id="password" required />
                            <div class="input-group-append">
                                <span class="input-group-text" onclick="togglePassword('password')">
                                    <i class="bi bi-eye" id="password-toggle"></i>
                                </span>
                            </div>
                            <div class="invalid-feedback">Please provide a new password.</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirm-password" required />
                            <div class="input-group-append">
                                <span class="input-group-text" onclick="togglePassword('confirm-password')">
                                    <i class="bi bi-eye" id="confirm-password-toggle"></i>
                                </span>
                            </div>
                            <div class="invalid-feedback">Please confirm the new password.</div>
                        </div>
                    </div>

                    <!-- Submit button with Bootstrap styling -->
                    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(`${inputId}-toggle`);

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash");
                toggleIcon.classList.add("bi-eye");
            }
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
