@model LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/css/intlTelInput.min.css" />

    <title>Login</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background: linear-gradient(to right, #f0f0f0, #e0e0e0);
        }

        .card-header {
            border-radius: 20px 20px 0 0;
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
        }

        .btn {
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-google, .btn-facebook, .btn-microsoft {
            color: #fff;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-outline-success {
            border-color: #55c26a;
            color: #55c26a;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-outline-success:hover {
                background: linear-gradient(to right, #55c26a, #48a663);
                color: #fff;
            }

        .form-label {
            font-weight: bold;
        }

        .invalid-feedback {
            display: block;
        }

        .social-btn-container {
            margin-top: 20px;
        }

        .social-btn {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header text-center">
                <h2 class="py-3">Welcome Back!</h2>
            </div>
            <div class="card-body p-4">
                <form method="post" asp-action="Login" class="needs-validation" novalidate>

                    <input asp-for="RedirectUrl" hidden />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label for="identifier" class="form-label">Email or Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="EmailOrPhoneNumber" class="form-control" aria-required="true" id="identifier" required />
                            <span asp-validation-for="EmailOrPhoneNumber"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" aria-required="true" id="password" required />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember Me</label>
                    </div>

                    <div>
                        <button type="submit" class="w-100 btn btn-lg btn-outline-success">Log in</button>
                    </div>

                    <div class="d-flex justify-content-between pt-3">
                        <p class="text-center">
                            <a asp-action="ForgetPassword" asp-controller="Account" class="text-decoration-none">Forgot your password?</a>
                        </p>
                        <p class="text-center">
                            <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl" class="text-decoration-none">Register as a new user</a>
                        </p>
                    </div>

                </form>
                <div class="social-btn-container mt-4 text-center">
                    <p class="mb-2" style="font-size: 18px; color: #555;">Or sign in with:</p>
                    <div class="d-flex justify-content-center">
                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="btn btn-lg btn-google social-btn" style="background-color: #d94836; color: #ffffff;">
                            <i class="bi bi-google"></i> Google
                        </a>
                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Facebook" class="btn btn-lg btn-facebook social-btn" style="background-color: #3b5998; color: #ffffff; margin-left: 10px; margin-right: 10px;">
                            <i class="bi bi-facebook"></i> Facebook
                        </a>
                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Microsoft" class="btn btn-lg btn-microsoft social-btn" style="background-color: #2f2f2f; color: #ffffff;">
                            <i class="bi bi-microsoft"></i> Microsoft
                        </a>
                        <a asp-controller="Account" asp-action="LoginWithTwitter" asp-route-provider="Twitter" class="btn btn-lg social-btn" style="background-color: #1DA1F2; color: #ffffff; margin-left: 10px; margin-right: 10px;">
                            <i class="bi bi-twitter"></i> Twitter
                        </a>
                        <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="GitHub" class="btn btn-lg social-btn" style="background-color: #000000; color: #ffffff;">
                            <i class="bi bi-github"></i> GitHub
                        </a>
                    </div>
                </div>


            </div>
        </div>
    </div>

</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/utils.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Initialize intl-tel-input on the phoneNumber input
            var input = document.querySelector("#phoneNumber");
            var iti = window.intlTelInput(input, {
                separateDialCode: true,
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/utils.js"
            });

            // Set the initial value for the Country Code input
            var countryCodeInput = document.querySelector("#countryCode");
            countryCodeInput.value = iti.getSelectedCountryData().dialCode;

            // Update the Country Code input when the selected country changes
            iti.addEventListener("countrychange", function () {
                countryCodeInput.value = iti.getSelectedCountryData().dialCode;
            });
        });
    </script>
}
