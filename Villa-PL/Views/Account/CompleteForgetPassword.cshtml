@{
    ViewData["Title"] = "Complete Forget Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete Forget Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: linear-gradient(to right, #f0f0f0, #e0e0e0);
        }

        .card-header {
            border-radius: 20px 20px 0 0;
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
            text-align: center;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Complete Forget Password</h2>
            </div>

            <div class="card-body">
                <p>Please check your inbox for the password reset email.</p>
                <p>If you don't see the email, you can also check your inbox on:</p>
                <a href="https://mail.google.com/mail/u/0/" target="_blank" class="btn btn-primary" style="text-decoration: none;">
                    <i class="bi bi-envelope-fill"></i> Open Your Inbox
                </a>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
