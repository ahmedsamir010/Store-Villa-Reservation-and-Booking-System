@model ForgetPasswordVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forget Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: linear-gradient(to right, #f0f0f0, #e0e0e0);
        }

        .card-header {
            border-radius: 20px 20px 0 0;
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
            text-align: center;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        button {
            margin-top: 15px;
            border-radius: 8px;
            font-weight: bold;
        }

        .btn-primary {
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #48a663, #3f955b);
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Forget Password</h2>
            </div>
            <div class="card-body">
                <div id="errorMessage" class="text-danger"></div>
                <form id="forgetPasswordForm" asp-action="ForgetPassword" asp-controller="Account">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control email" placeholder="Enter Email" required="" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="button" id="submitBtn" class="btn btn-primary btn-block text-center">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#submitBtn').on('click', function () {
                var formData = $('#forgetPasswordForm').serialize();

                $.ajax({
                    url: '@Url.Action("ForgetPassword", "Account")',
                    type: 'POST',
                    data: formData,
                    success: function (result) {
                        if (result.success) {
                            window.location.href = '@Url.Action("CompleteForgetPassword", "Account")';
                        } else {
                            $('#errorMessage').text(result.message);
                        }
                    },
                    error: function () {
                        $('#errorMessage').text('An error occurred while processing your request. Please try again later.');
                    }
                });
            });
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
