@{
    ViewData["Title"] = "Email Verification Sent";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background: linear-gradient(to right, #f0f0f0, #e0e0e0);
        }

        .card-header {
            border-radius: 20px 20px 0 0;
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
            text-align: center;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .btn-primary {
            background: linear-gradient(to right, #55c26a, #48a663);
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #48a663, #3f955b);
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Email Verification Sent</h2>
            </div>
            <div class="card-body">
                <p class="mb-4">
                    Thank you for registering! We've sent you an email with a link to verify your email address.
                    Please check your inbox and click the link to complete the registration process.
                </p>
                <div class="text-center">
                    <a href="https://mail.google.com/mail/u/0/" target="_blank" class="btn btn-primary">Go to Gmail Inbox</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
