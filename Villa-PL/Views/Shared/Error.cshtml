@model ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="text-center">
    <h1 class="display-4 text-danger">404 - Page Not Found</h1>
    <p class="lead">We're sorry, but the page you requested could not be found.</p>
    <img src="~/images/Error404.jpg" alt="Cat with a question mark" class="img-fluid mt-4">
</div>

@if (Model != null)
{
    @if (Model.ShowRequestId)
    {
        <div class="text-center mt-4">
            <p class="text-muted">
                If you believe this is an error, please provide the following information to the support team:
            </p>
            <code>@Model.RequestId</code>
        </div>
    }

    <div class="text-center mt-5">
        <p class="text-muted">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
        </p>
    </div>
}
else
{
    <div class="text-center mt-4">
        <p class="text-muted">
            An unexpected error occurred, and there is no additional information available.
        </p>
    </div>
}
